<p id=“notice”><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
  <br>
  <strong>Doses:</strong>
  <% @cocktail.doses.each do |dose| %>
    <%= dose.description %> of
    <%= dose.ingredient.name %>
  <% end %>
</p>


<%= simple_form_for @dose do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient_id, collection: Ingredient.all %>
  <%= f.input :cocktail_id, :as => :hidden, :input_html => { :value => @cocktail.id } %>
  <%= f.submit “add a dose”, class: “btn btn-primary” %>
<% end %>

<%= link_to ‘Back’, cocktails_path %>
